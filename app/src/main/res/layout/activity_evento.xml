<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Evento">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eventofondo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CREACIÓN DE NUEVO EVENTO"
            android:textColor="#07040B"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:text="Nombre del Evento"
            android:textColor="#07040B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="Ingrese nombre del evento"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:text="Descripción"
            android:textColor="#07040B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtDescripcion"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="Ingrese la descripción"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:text="Fecha"
            android:textColor="#07040B"
            android:textSize="24sp" />

        <DatePicker
            android:id="@+id/dpFecha"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:onClick="fecha"
            android:headerBackground="#009688" />

        <Button
            android:id="@+id/button"
            android:layout_width="257dp"
            android:layout_height="59dp"
            android:text="CREAR EVENTO"
            android:backgroundTint="@color/black"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>